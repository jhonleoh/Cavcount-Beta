{
  "name": "cavcount",
  "version": "3.5",
  "description": "CavCount - Free Word, Sentence & Paragraph Counter with Image-to-Text OCR",
  "author": "Leo via Same",
  "private": true,
  "scripts": {
    "dev": "next dev -H 0.0.0.0",
    "build": "npm run generate-metadata && SKIP_ESLINT_CHECK=true SKIP_TYPE_CHECK=true NEXT_DISABLE_TYPESCRIPT_CHECK=true NEXT_SKIP_LINT=true next build --no-lint",
    "build:static": "node build-wrapper.js && next export",
    "generate-metadata": "node scripts/generate-metadata.js",
    "start": "next start -H 0.0.0.0",
    "lint": "eslint src/*",
    "format": "biome format --write ./src"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.0",
    "@radix-ui/react-switch": "^1.1.4",
    "@radix-ui/react-toast": "^1.2.7",
    "@radix-ui/react-toggle": "^1.1.3",
    "@react-three/drei": "^9.120.3",
    "@react-three/fiber": "^8.15.19",
    "@tailwindcss/typography": "^0.5.16",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "gray-matter": "^4.0.3",
    "lucide-react": "^0.475.0",
    "next": "^15.2.0",
    "next-mdx-remote": "^5.0.0",
    "next-themes": "^0.4.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.5.0",
    "rehype-raw": "^7.0.0",
    "rehype-sanitize": "^6.0.0",
    "rehype-stringify": "^10.0.1",
    "remark": "^15.0.1",
    "remark-html": "^16.0.1",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.2",
    "sonner": "^2.0.3",
    "tailwind-merge": "^3.0.1",
    "tailwindcss-animate": "^1.0.7",
    "tesseract.js": "^6.0.1",
    "three": "^0.175.0",
    "unified": "^11.0.5"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@eslint/eslintrc": "^3",
    "@types/node": "^20",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "eslint": "^9",
    "eslint-config-next": "15.1.7",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  }
}
